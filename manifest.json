{
  "manifest_version": 3,
  "name": "Outlook Copy Email",
  "version": "1.0",
  "description": "Copy email in Outlook Web just by clicking.",
  "content_scripts": [
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
